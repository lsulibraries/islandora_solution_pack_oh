/**
 * Implements hook_CMODEL_PID_islandora_derivative().
 */
function islandora_oral_history_islandora_sp_ohcmodel_islandora_derivative() {
  $derivative_list = array(
    array(
      'source_dsid' => NULL,
      'destination_dsid' => 'TN',
      'weight' => 1,
      'function' => array(
        'islandora_oral_history_create_thumbnail',
      ),
      'file' => drupal_get_path('module', 'islandora_oral_history') . '/includes/derivatives.inc',
    ),
  );
  if (!variable_get('islandora_oral_history_defer_derivatives_on_ingest', FALSE)) {
    $derivative_list[] = array(
      'source_dsid' => 'OBJ',
      'destination_dsid' => 'PROXY_MP3',
      'weight' => '0',
      'function' => array(
        'islandora_oral_history_create_mp3',
      ),
      'file' => drupal_get_path('module', 'islandora_oral_history') . '/includes/derivatives.inc',
    );
  }
  return $derivative_list;
}
