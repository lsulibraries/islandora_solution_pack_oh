/**
 * Implements hook_islandora_required_objects().
 */
function islandora_oral_history_islandora_required_objects(IslandoraTuque $connection) {
  $module_path = drupal_get_path('module', 'islandora_oral_history');
  // OH Content Model.
  $oh_content_model = $connection->repository->constructObject('islandora:sp-ohCModel');
  $oh_content_model->owner = 'fedoraAdmin';
  $oh_content_model->label = 'Islandora OH Content Model';
  $oh_content_model->models = 'fedora-system:ContentModel-3.0';
  // DS-COMPOSITE-MODEL Datastream.
  $datastream = $oh_content_model->constructDatastream('DS-COMPOSITE-MODEL', 'X');
  $datastream->label = 'DS-COMPOSITE-MODEL';
  $datastream->mimetype = 'application/xml';
  $datastream->setContentFromFile("$module_path/xml/islandora_oral_history_ds_composite_model.xml", FALSE);
  $oh_content_model->ingestDatastream($datastream);
  // Audio Collection.
  $oh_collection = $connection->repository->constructObject('islandora:oh_collection');
  $oh_collection->owner = 'fedoraAdmin';
  $oh_collection->label = 'Audio Collection';
  $oh_collection->models = 'islandora:collectionCModel';
  $oh_collection->relationships->add(FEDORA_RELS_EXT_URI, 'isMemberOfCollection', 'islandora:root');
  // Collection Policy Datastream.
  $datastream = $oh_collection->constructDatastream('COLLECTION_POLICY', 'X');
  $datastream->label = 'Collection policy';
  $datastream->mimetype = 'application/xml';
  $datastream->setContentFromFile("$module_path/xml/islandora_oral_history_collection_policy.xml", FALSE);
  $oh_collection->ingestDatastream($datastream);
  // TN Datastream.
  $datastream = $oh_collection->constructDatastream('TN', 'M');
  $datastream->label = 'Thumbnail';
  $datastream->mimetype = 'image/png';
  $datastream->setContentFromFile("$module_path/images/folder.png", FALSE);
  $oh_collection->ingestDatastream($datastream);
  return array(
    'islandora_oral_history' => array(
      'title' => 'Islandora oh',
      'objects' => array(
        $oh_content_model,
        $oh_collection,
      ),
    ),
  );
}

